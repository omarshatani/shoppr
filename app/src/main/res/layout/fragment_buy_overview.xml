<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buy_sell_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.overview.buy.BuyOverviewFragment">

    <TextView
        android:id="@+id/buy_sell_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="I would like to"
        android:textColor="@color/material_dynamic_neutral10"
        android:textSize="43sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/buy_sell_menu"
        style="@style/NoOutlineExposedDropdown"
        android:background="@color/fui_transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@color/fui_transparent"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buy_sell_placeholder"
        app:layout_constraintTop_toTopOf="parent">

        <AutoCompleteTextView
            android:backgroundTint="@color/fui_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            android:textSize="43sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="LabelFor" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/buy_sell_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        android:autofillHints=""
        android:background="@null"
        android:cursorVisible="true"
        android:elegantTextHeight="false"
        android:hint="insert a title"
        android:inputType="text|textMultiLine"
        android:maxLength="35"
        android:maxLines="2"
        android:textColor="@color/material_dynamic_neutral50"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buy_sell_placeholder"
        app:layout_constraintWidth="match_parent" />

    <ImageView
        android:id="@+id/photos_picker"
        android:layout_width="186dp"
        android:layout_height="153dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/add_photo_alternate_24px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy_sell_title" />

    <TextView
        android:id="@+id/add_image_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add photos"
        app:layout_constraintBottom_toTopOf="@+id/photos_picker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy_sell_title"
        app:layout_constraintVertical_bias="0.78" />

    <EditText
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="36dp"
        android:hint="Add a brief description"
        android:minLines="7"
        app:layout_constraintBottom_toTopOf="@+id/create_post_cta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photos_picker"
        app:layout_constraintVertical_bias="0.042" />

    <Button
        android:id="@+id/create_post_cta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Add post"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>