<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buy_sell_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.overview.buy.BuyOverviewFragment">

    <TextView
        android:id="@+id/buy_sell_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="I would like to"
        android:textColor="@color/material_dynamic_neutral10"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/buy_sell_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="buy"
        android:textColor="@color/material_dynamic_neutral10"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/buy_sell_placeholder"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/buy_sell_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="28dp"
        android:contentDescription="arrow_down"
        android:src="@drawable/keyboard_arrow_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight="30dp"
        app:layout_constraintLeft_toRightOf="@id/buy_sell_picker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth="30dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/buy_sell_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        android:autofillHints=""
        android:background="@null"
        android:cursorVisible="true"
        android:elegantTextHeight="false"
        android:hint="insert a title"
        android:inputType="text|textMultiLine"
        android:maxLength="35"
        android:maxLines="2"
        android:textColor="@color/material_dynamic_neutral50"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buy_sell_placeholder"
        app:layout_constraintWidth="match_parent" />

    <ImageView
        android:id="@+id/add_photos_image"
        android:layout_width="186dp"
        android:layout_height="153dp"
        android:layout_marginTop="116dp"
        android:src="@drawable/add_photo_alternate_24px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy_sell_title" />

    <TextView
        android:id="@+id/add_image_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add photos"
        app:layout_constraintBottom_toTopOf="@+id/add_photos_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy_sell_title"
        app:layout_constraintVertical_bias="0.793" />

    <Button
        android:id="@+id/create_post_cta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Add post"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/buy_sell_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Add a small description"
        app:layout_constraintBottom_toTopOf="@+id/create_post_cta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_photos_image"
        app:layout_constraintVertical_bias="0.482" />

</androidx.constraintlayout.widget.ConstraintLayout>